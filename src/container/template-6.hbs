<header class="header">
	<a href="#test">
		{{> logo}}
	</a>

	<nav class="header_nav">
		<div class="header_nav_right">
			{{> nav list=header}}
		</div>
	</nav>
</header>

<main class="main">
	{{#with info}}
	<div class="info">
		<h1 class="info_title">{{title}}</h1>
		<p class="info_text">{{description}}</p>
	</div>
	{{/with}}

	{{#with form}}
	<form class="form">
		<div class="form_input_list">
			{{#each inputs}}
			<input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}"
				id="form_input-{{id}}">
			{{/each}}
		</div>

		<div class="form_checkbox">
			<input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
			<div></div>
			<label for="{{checkbox.name}}">{{checkbox.label}}</label>
		</div>

		<button type="submit" class="form_button">{{button}}</button>
		<p class="form_info">{{info}}</p>
	</form>
	{{/with}}
</main>

<div class="updates">
	{{#with updates}}
	<h1 class="updates_title">{{title}}</h1>

	{{#each list}}
	<div class="list">
		<strong class="list_nickname">{{nickname}}</strong>
		<p class="list_description">{{description}}</p>
	</div>
	{{/each}}

	{{#with show_all}}
	<a href="{{url}}" class="updates_link">{{text}}</a>
	{{/with}}
	{{/with}}
</div>

<section class="page_block">
	{{#with expirience}}
	<div class="expirience">
		<strong class="expirience_title">{{title}}</strong>
		<p class="expirience_badge">{{badge}}</p>
	</div>

	<div class="lists">
		{{#each list}}
		<div class="user_list_name">
			<strong class="list_name">{{name}}</strong>
			<p class="list_details">{{details}}</p>
		</div>
		{{/each}}
	</div>
	{{/with}}
</section>


<footer class="footer" id="test">
	<div>
		{{> logo}}
		<span class="footer_copyright">Copyright 2023-2024</span>
	</div>

	{{#each footer}}
	<div>
		<span class="footer_title">{{title}}</span>
		{{>nav list=links isVertical=true}}
	</div>
	{{/each}}
</footer>